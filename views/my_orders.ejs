<%- include('./partials/header') %>
<%- include('./partials/nav') %>

<div class="container my-5">
    <h2 class="mb-4">My Orders</h2>

    <% if (orders && orders.length > 0) { %>
        <% orders.forEach(order => { %>
            <div class="card mb-4 shadow-sm">
                <div class="card-header bg-dark text-white">
                    <div class="row align-items-center">
                        <div class="col-12 col-md-6 mb-2 mb-md-0">
                            <h5 class="mb-0"><i class="bi bi-receipt"></i> Order #<%= order.invoiceNumber %></h5>
                        </div>
                        <div class="col-12 col-md-6 text-md-end">
                            <span class="badge <%= order.status === 'completed' ? 'bg-success' : order.status === 'pending' ? 'bg-warning text-dark' : 'bg-secondary' %> fs-6">
                                <%= order.status.toUpperCase() %>
                            </span>
                        </div>
                    </div>
                </div>

                <div class="card-body p-3 p-md-4">
                    <div class="row g-3">
                        <!-- Left Column - Order Details -->
                        <div class="col-12 col-lg-9">
                            <!-- Order Date -->
                            <div class="mb-3 p-3 bg-light rounded">
                                <small class="text-muted d-block mb-1"><i class="bi bi-calendar-event"></i> Order Date</small>
                                <strong><%= new Date(order.orderDate).toLocaleDateString('en-US', {
                                        year: 'numeric',
                                        month: 'long',
                                        day: 'numeric',
                                        hour: '2-digit',
                                        minute: '2-digit'
                                    }) %></strong>
                            </div>

                            <!-- Contact Information -->
                            <div class="mb-3 p-3 bg-light rounded">
                                <small class="text-muted d-block mb-1"><i class="bi bi-envelope"></i> Email</small>
                                <strong><%= order.userSnapshot.email %></strong>
                            </div>

                            <!-- Shipping Address -->
                            <div class="mb-3 p-3 bg-light rounded">
                                <small class="text-muted d-block mb-1"><i class="bi bi-geo-alt"></i> Shipping Address</small>
                                <strong><%= order.userSnapshot.address %></strong>
                            </div>

                            <!-- Payment Information -->
                            <div class="row g-2">
                                <div class="col-12 col-md-6">
                                    <div class="p-3 bg-light rounded h-100">
                                        <small class="text-muted d-block mb-1"><i class="bi bi-credit-card"></i> Payment Method</small>
                                        <strong><%= order.paymentInfo.paymentMethod === 'credit' ? 'Credit Card' : 'Debit Card' %></strong>
                                    </div>
                                </div>
                                <div class="col-12 col-md-6">
                                    <div class="p-3 bg-light rounded h-100">
                                        <small class="text-muted d-block mb-1"><i class="bi bi-credit-card-2-front"></i> Card Number</small>
                                        <strong><%= order.paymentInfo.cardNumber %></strong>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Right Column - Order Summary (Smaller) -->
                        <div class="col-12 col-lg-3">
                            <div class="card border-success h-100">
                                <div class="card-body text-center d-flex flex-column justify-content-center p-3">
                                    <p class="text-muted mb-2 small">Total Amount</p>
                                    <h3 class="text-success mb-2">$<%= order.totalAmount.toFixed(2) %></h3>
                                    <p class="text-muted mb-0 small">
                                        <i class="bi bi-box-seam"></i> <%= order.items.length %> Item<%= order.items.length !== 1 ? 's' : '' %>
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Action Buttons -->
                    <div class="row mt-4">
                        <div class="col-12">
                            <hr class="my-3">
                            <div class="d-flex gap-2 flex-wrap justify-content-center justify-content-md-start">
                                <button class="btn btn-primary"
                                        type="button"
                                        data-bs-toggle="collapse"
                                        data-bs-target="#orderItems-<%= order._id %>"
                                        aria-expanded="false">
                                    <i class="bi bi-list-ul me-1"></i>View Items
                                </button>
                                <button class="btn btn-outline-secondary"
                                        onclick="downloadOrderPDF('<%= order._id %>')">
                                    <i class="bi bi-file-earmark-pdf me-1"></i>Download PDF
                                </button>
                            </div>
                        </div>
                    </div>

                    <!-- Collapsible Items List -->
                    <div class="collapse mt-3" id="orderItems-<%= order._id %>">
                        <div class="card bg-light">
                            <div class="card-body">
                                <h6 class="mb-3"><i class="bi bi-bag-check"></i> Order Items</h6>
                                <div class="table-responsive">
                                    <table class="table table-sm table-hover bg-white mb-0">
                                        <thead class="table-dark">
                                        <tr>
                                            <th>Title</th>
                                            <th>Author</th>
                                            <th class="text-center">Qty</th>
                                            <th class="text-end">Unit Price</th>
                                            <th class="text-end">Subtotal</th>
                                        </tr>
                                        </thead>
                                        <tbody>
                                        <% order.items.forEach(item => { %>
                                            <tr>
                                                <td><%= item.title %></td>
                                                <td class="text-muted small"><%= item.author %></td>
                                                <td class="text-center"><%= item.quantity %></td>
                                                <td class="text-end">$<%= item.unitPrice.toFixed(2) %></td>
                                                <td class="text-end fw-bold">$<%= item.subtotal.toFixed(2) %></td>
                                            </tr>
                                        <% }) %>
                                        </tbody>
                                        <tfoot class="table-light">
                                        <tr>
                                            <td colspan="4" class="text-end fw-bold">Total:</td>
                                            <td class="text-end fw-bold text-success fs-5">$<%= order.totalAmount.toFixed(2) %></td>
                                        </tr>
                                        </tfoot>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        <% }) %>
    <% } else { %>
        <div class="card shadow-sm">
            <div class="card-body text-center py-5">
                <i class="bi bi-inbox display-1 text-muted mb-3"></i>
                <h4 class="mb-3">No Orders Yet</h4>
                <p class="text-muted mb-4">You haven't placed any orders yet. Start shopping to see your orders here!</p>
                <a href="/books" class="btn btn-primary btn-lg">
                    <i class="bi bi-book me-2"></i>Browse Books
                </a>
            </div>
        </div>
    <% } %>
</div>


<%- include('./partials/footer') %>