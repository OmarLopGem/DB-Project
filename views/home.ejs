<%- include('./partials/header') %>
<%- include('./partials/nav') %>

<header class="bg-dark py-5" style="background-image: url('/assets/home_background.jpg');">
    <div class="container px-4 px-lg-5 my-5">
        <div class="text-center text-white">
            <h1 class="display-4 fw-bolder">WELCOME TO THE BEST BOOK STORE ON THE INTERNET</h1>
        </div>
        <% if (session?.userType === "admin") { %>
            <div class="text-center text-white mt-3 mx-auto">
                <button
                        id="add-button" onclick="handleManageBook()" class="btn btn-success btn-lg w-100">
                    <i ></i>ADD NEW BOOK
                </button>
            </div>
        <% } %>
    </div>
</header>

<section class="py-5">
    <div class="container px-4 px-lg-5 mt-5">
        <div class="row gx-4 gx-lg-3 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">

            <% books.forEach(book => { %>

                <div class="card mx-3 mb-4 book-card" style="width: 240px;">

                    <div class="image-container">
                        <img src="<%= book.cover %>" class="card-img-top" alt="<%= book.title %>">

                        <div class="overlay">
                            <p class="mb-1 text-white"><strong>Author:</strong> <%= book.author %></p>
                            <p class="mb-1 text-white"><strong>Editor:</strong> <%= book.editor %></p>
                            <p class="mb-1 text-white"><strong>Year:</strong> <%= book.year %></p>
                            <p class="mb-3 text-white"><strong>Stock:</strong> <%= book.stock %></p>

                            <button
                                    class="btn btn-light btn-sm mb-2"
                                    data-bs-toggle="modal"
                                    data-bs-target="#synopsisModal<%= book._id %>"
                            >
                                Synopsis
                            </button>
                            <% if (session?.userType === "admin") { %>
                                <button
                                    onclick="handleManageBook('<%= book._id %>')"
                                    class="btn btn-warning btn-sm mb-2"
                                >
                                    Edit Book
                                </button>

                                <button
                                        onclick="handleDeleteBook('<%= book._id %>')"
                                        class="btn btn-danger btn-sm"
                                >
                                    Delete Book
                                </button>
                            <% } %>
                            
                        </div>
                    </div>

                    <div class="card-body text-center">
                        <h5 class="card-title"><%= book.title %></h5>

                        <div class="d-flex justify-content-center gap-2 mb-2">
                            <p class="card-price mb-0">$<%= book.price.toFixed(2) %> CAD</p>

                            <% if (book.discount) { %>
                                <p class="card-discount mb-0 text-danger">-<%= book.discount %>%</p>
                            <% } %>
                        </div>

                        <button class="btn btn-dark" type="button"
                                onclick="handleAddCart('<%= session.userId %>', '<%= book._id %>')">
                            Add to Cart
                        </button>

                    </div>
                </div>

                <div class="modal fade" id="synopsisModal<%= book._id %>" tabindex="-1">
                    <div class="modal-dialog modal-dialog-centered">
                        <div class="modal-content">

                            <div class="modal-header">
                                <h5 class="modal-title"><%= book.title %> â€” Synopsis</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                            </div>

                            <div class="modal-body">
                                <p><%= book.synopsis %></p>
                            </div>

                        </div>
                    </div>
                </div>

            <% }) %>

        </div>
    </div>
</section>

<%- include('./partials/footer') %>
