<%- include('./partials/header') %>
<%- include('./partials/nav') %>

<div class="container my-5">
    <h2 class="mb-4">Checkout</h2>

    <div class="row ">
        <!-- Left Column - Order Summary -->
        <div class="col-lg-8 mb-4 px-2">
            <div class="card ">
                <div class="card-header bg-dark text-white">
                    <h4 class="mb-0">Order Summary</h4>
                </div>
                <div class="card-body">
                    <% if (cartItems && cartItems.length > 0) { %>
                        <% cartItems.forEach(item => { %>
                            <div class="row mb-3 pb-3 px-1 border-bottom align-items-center">
                                <!-- Book Image -->
                                <div class="col-md-2">
                                    <img src="<%= item.bookId.cover %>"
                                         class="img-fluid rounded"
                                         alt="<%= item.bookId.title %>"
                                         style="max-height: 120px; object-fit: cover;">
                                </div>

                                <!-- Book Details -->
                                <div class="col-md-5 ">
                                    <h6 class="mb-1"><%= item.bookId.title %></h6>
                                    <p class="text-muted mb-1 small">by <%= item.bookId.author %></p>

                                    <!-- Price Display with Discount -->
                                    <div class="mt-2">
                                        <% if (item.bookId.discount) { %>
                                            <span class="text-decoration-line-through text-muted me-2">
                                                $<%= item.bookId.price.toFixed(2) %>
                                            </span>
                                            <span class="text-success fw-bold me-2">
                                                $<%= (item.bookId.price * (1 - item.bookId.discount / 100)).toFixed(2) %>
                                            </span>
                                            <span class="badge bg-danger">-<%= item.bookId.discount %>%</span>
                                        <% } else { %>
                                            <span class="fw-bold">$<%= item.bookId.price.toFixed(2) %></span>
                                        <% } %>
                                    </div>
                                </div>

                                <!-- Quantity Controls -->
                                <div class="col-md-3">
                                    <div class="d-flex align-items-center justify-content-center">
                                        <button class="btn btn-outline-secondary btn-sm"
                                                onclick="updateQuantity('<%= item.bookId._id %>', -1, <%= item.bookId.stock %>)"
                                                id="decreaseBtn-<%= item.bookId._id %>">
                                            -
                                        </button>
                                        <span class="mx-3 fw-bold" id="quantity-<%= item.bookId._id %>">
                                            <%= item.quantity %>
                                        </span>
                                        <button class="btn btn-outline-secondary btn-sm"
                                                onclick="updateQuantity('<%= item.bookId._id %>', 1, <%= item.bookId.stock %>)"
                                                id="increaseBtn-<%= item.bookId._id %>">
                                            +
                                        </button>
                                    </div>
                                    <p class="text-muted small text-center mt-1 mb-0">
                                        Stock: <%= item.bookId.stock %>
                                    </p>
                                </div>

                                <!-- Item Subtotal -->
                                <div class="col-md-2 text-end">
                                    <%
                                        const itemPrice = item.bookId.discount
                                                ? item.bookId.price * (1 - item.bookId.discount / 100)
                                                : item.bookId.price;
                                        const itemSubtotal = itemPrice * item.quantity;
                                    %>
                                    <p class="fw-bold mb-0" id="itemSubtotal-<%= item.bookId._id %>">
                                        $<%= itemSubtotal.toFixed(2) %>
                                    </p>
                                </div>
                            </div>
                        <% }) %>

                        <!-- Totals Section -->
                        <div class="row mt-4 me-1">
                            <div class="col-md-8 offset-md-4">
                                <div class="d-flex justify-content-between mb-2">
                                    <span>Subtotal:</span>
                                    <span id="subtotal">$0.00</span>
                                </div>
                                <div class="d-flex justify-content-between mb-2">
                                    <span>Taxes (13%):</span>
                                    <span id="taxes">$0.00</span>
                                </div>
                                <hr>
                                <div class="d-flex justify-content-between">
                                    <span class="h5 fw-bold">Total:</span>
                                    <span class="h5 fw-bold text-success" id="total">$0.00</span>
                                </div>
                            </div>
                        </div>
                    <% } else { %>
                        <p class="text-center text-muted my-5">Your cart is empty</p>
                    <% } %>
                </div>
            </div>
        </div>

        <!-- Right Column - Checkout Form -->
        <div class="col-lg-4">
            <form id="checkoutForm" novalidate>
                <!-- Shipping Information -->
                <div class="card mb-3">
                    <div class="card-header bg-dark text-white">
                        <h5 class="mb-0">Shipping Information</h5>
                    </div>
                    <div class="card-body">
                        <!-- Use Registered Address Checkbox -->
                        <div class="form-check mb-3">
                            <input class="form-check-input"
                                   type="checkbox"
                                   id="useRegisteredAddress"
                                    <%= user ? 'checked' : '' %>
                                   onchange="toggleAddressFields()">
                            <label class="form-check-label" for="useRegisteredAddress">
                                Use my registered address
                            </label>
                        </div>

                        <!-- First Name -->
                        <div class="mb-3">
                            <label for="firstName" class="form-label">First Name <span
                                        class="text-danger">*</span></label>
                            <input type="text"
                                   class="form-control"
                                   id="firstName"
                                   name="firstName"
                                   value="<%= user ? user.firstName : '' %>"
                                    <%= user ? 'disabled' : '' %>
                                   required>
                            <div class="invalid-feedback">Please enter your first name.</div>
                        </div>

                        <!-- Last Name -->
                        <div class="mb-3">
                            <label for="lastName" class="form-label">Last Name <span
                                        class="text-danger">*</span></label>
                            <input type="text"
                                   class="form-control"
                                   id="lastName"
                                   name="lastName"
                                   value="<%= user ? user.lastName : '' %>"
                                    <%= user ? 'disabled' : '' %>
                                   required>
                            <div class="invalid-feedback">Please enter your last name.</div>
                        </div>

                        <!-- Address -->
                        <div class="mb-3">
                            <label for="address" class="form-label">Address <span class="text-danger">*</span></label>
                            <input type="text"
                                   class="form-control"
                                   id="address"
                                   name="address"
                                   value="<%= user ? user.address : '' %>"
                                    <%= user ? 'disabled' : '' %>
                                   required>
                            <div class="invalid-feedback">Please enter your address.</div>
                        </div>

                        <!-- City -->
                        <div class="mb-3">
                            <label for="city" class="form-label">City <span class="text-danger">*</span></label>
                            <input type="text"
                                   class="form-control"
                                   id="city"
                                   name="city"
                                   value="<%= user ? user.city : '' %>"
                                    <%= user ? 'disabled' : '' %>
                                   required>
                            <div class="invalid-feedback">Please enter your city.</div>
                        </div>

                        <!-- Province -->
                        <div class="mb-3">
                            <label for="province" class="form-label">Province <span class="text-danger">*</span></label>
                            <select class="form-select"
                                    id="province"
                                    name="province"
                                    <%= user ? 'disabled' : '' %>
                                    required>
                                <option value="">Select a province...</option>
                                <option value="ON" <%= user && user.province === 'ON' ? 'selected' : '' %>>Ontario
                                </option>
                                <option value="BC" <%= user && user.province === 'BC' ? 'selected' : '' %>>British
                                    Columbia
                                </option>
                                <option value="AB" <%= user && user.province === 'AB' ? 'selected' : '' %>>Alberta
                                </option>
                                <option value="SK" <%= user && user.province === 'SK' ? 'selected' : '' %>>
                                    Saskatchewan
                                </option>
                                <option value="MB" <%= user && user.province === 'MB' ? 'selected' : '' %>>Manitoba
                                </option>
                                <option value="QC" <%= user && user.province === 'QC' ? 'selected' : '' %>>Quebec
                                </option>
                                <option value="NB" <%= user && user.province === 'NB' ? 'selected' : '' %>>New
                                    Brunswick
                                </option>
                                <option value="NS" <%= user && user.province === 'NS' ? 'selected' : '' %>>Nova Scotia
                                </option>
                                <option value="PE" <%= user && user.province === 'PE' ? 'selected' : '' %>>Prince Edward
                                    Island
                                </option>
                                <option value="NL" <%= user && user.province === 'NL' ? 'selected' : '' %>>Newfoundland
                                    and Labrador
                                </option>
                                <option value="YT" <%= user && user.province === 'YT' ? 'selected' : '' %>>Yukon
                                </option>
                                <option value="NT" <%= user && user.province === 'NT' ? 'selected' : '' %>>Northwest
                                    Territories
                                </option>
                                <option value="NU" <%= user && user.province === 'NU' ? 'selected' : '' %>>Nunavut
                                </option>
                            </select>
                            <div class="invalid-feedback">Please select a province.</div>
                        </div>

                        <!-- Postal Code -->
                        <div class="mb-3">
                            <label for="postalCode" class="form-label">Postal Code <span
                                        class="text-danger">*</span></label>
                            <input type="text"
                                   class="form-control"
                                   id="postalCode"
                                   name="postalCode"
                                   placeholder="A1A 1A1"
                                   value="<%= user ? user.postalCode : '' %>"
                                    <%= user ? 'disabled' : '' %>
                                   required>
                            <div class="invalid-feedback">Please enter a valid postal code (e.g., A1A 1A1).</div>
                        </div>
                    </div>
                </div>

                <!-- Payment Information -->
                <div class="card mb-3">
                    <div class="card-header bg-dark text-white">
                        <h5 class="mb-0">Payment Information</h5>
                    </div>
                    <div class="card-body">
                        <!-- Payment Method -->
                        <div class="mb-3">
                            <label for="paymentMethod" class="form-label">Payment Method <span
                                        class="text-danger">*</span></label>
                            <select class="form-select" id="paymentMethod" name="paymentMethod" required>
                                <option value="">Select payment method...</option>
                                <option value="credit">Credit Card</option>
                                <option value="debit">Debit Card</option>
                            </select>
                            <div class="invalid-feedback">Please select a payment method.</div>
                        </div>

                        <!-- Card Holder Name -->
                        <div class="mb-3">
                            <label for="cardHolderName" class="form-label">Card Holder's Name <span class="text-danger">*</span></label>
                            <input type="text"
                                   class="form-control"
                                   id="cardHolderName"
                                   name="cardHolderName"
                                   placeholder="John Doe"
                                   required>
                            <div class="invalid-feedback">Please enter the card holder's name.</div>
                        </div>

                        <!-- Card Number -->
                        <div class="mb-3">
                            <label for="cardNumber" class="form-label">Card Number <span
                                        class="text-danger">*</span></label>
                            <input type="text"
                                   class="form-control"
                                   id="cardNumber"
                                   name="cardNumber"
                                   placeholder="1234 5678 9012 3456"
                                   maxlength="19"
                                   required>
                            <div class="invalid-feedback">Please enter a valid card number.</div>
                        </div>

                        <!-- Expiry Date and CVV -->
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="expiryDate" class="form-label">Expiry Date <span
                                            class="text-danger">*</span></label>
                                <input type="text"
                                       class="form-control"
                                       id="expiryDate"
                                       name="expiryDate"
                                       placeholder="MM/YY"
                                       maxlength="5"
                                       required>
                                <div class="invalid-feedback">Enter valid date (MM/YY).</div>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label for="cvv" class="form-label">CVV <span class="text-danger">*</span></label>
                                <input type="text"
                                       class="form-control"
                                       id="cvv"
                                       name="cvv"
                                       placeholder="123"
                                       maxlength="4"
                                       required>
                                <div class="invalid-feedback">Enter 3-4 digits.</div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Submit Button -->
                <% if (cartItems && cartItems.length > 0){ %>
                    <button
                            type="submit" class="btn btn-success btn-lg w-100">
                        <i class="bi bi-lock-fill me-2"></i>Place Order
                    </button>
                <% } else { %>
                    <button
                            disabled="true"
                            type="submit" class="btn btn-success btn-lg w-100">
                        <i class="bi bi-lock-fill me-2"></i>Place Order
                    </button>
                <% } %>

            </form>
        </div>
    </div>
</div>

<%- include('./partials/footer') %>